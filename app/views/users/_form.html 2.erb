<% form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br />
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br />
    <%= f.label :password %>
    <%= f.password_field :name %>
    <br />
    <%= f.submit %>
<% end %>