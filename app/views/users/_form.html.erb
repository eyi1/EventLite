<% if @user.errors.any? %>
    <div id="error_explanation">
    <strong>
        <%= pluralize(@user.errors.count, "error") %>
        <br>
        Please try again.
    </strong>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@user) do |f| %>
    <div class="form-group">
     <%= f.label :name %>: 
     <%= f.text_field :name %>
    </div>

    <%= f.label :username %>:
    <%= f.text_field :username %>
    
    <br>
    <%= f.label :email %>:
    <%= f.email_field :email %>
    
    <br>
    <%= f.label :password %>:
    <%= f.password_field :password %>
    
    <br>
    <%= f.submit %>
<% end %>
